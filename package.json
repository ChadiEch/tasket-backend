{
  "name": "tasket-backend",
  "version": "1.0.0",
  "description": "Task Management System Backend API (Backend-only, no frontend included)",
  "main": "server.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "seed": "node scripts/seed.js",
    "seed:prod": "NODE_ENV=production node scripts/seed.js",
    "migrate:uploads": "node scripts/migrateUploads.js",
    "migrate:persistent": "node scripts/migrateToPersistentStorage.js",
    "test:storage": "node test-storage.js",
    "build": "echo 'No build step required for backend API'",
    "build:full": "npm install && npm run seed:prod",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration"
  },
  "keywords": [
    "task",
    "management",
    "api",
    "express",
    "postgresql"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.682.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "sequelize": "^6.35.1",
    "sharp": "^0.34.4",
    "socket.io": "^4.7.4",
    "sqlite3": "^5.1.7",
    "tslib": "^2.8.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  }
}